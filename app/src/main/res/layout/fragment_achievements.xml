<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.game.quizee.AchivementsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Career_Achievements"
                android:id="@+id/Career_Achivements_Button"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Career_Achievements_List">
            </ListView>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Category_Based_Achievements"
                android:id="@+id/Category_Achievements_Button"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Category_Achievements_List">
            </ListView>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Mode_Based_Achievements"
                android:id="@+id/Mode_Achievements_Button"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Mode_Achievements_List">
            </ListView>

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Epic_Achievements"
                android:id="@+id/Epic_Achievements_Button"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Epic_Achievements_List">
            </ListView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
