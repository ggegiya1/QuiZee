<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.game.quizee.ShopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_stats"
            android:textSize="30sp"
            android:background="@drawable/button_tertiary_default"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="false"
            android:id="@+id/stats_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Career_Achievements"
            android:textSize="30sp"
            android:background="@drawable/button_tertiary_default"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="false"
            android:id="@+id/career_achievements_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Category_Based_Achievements"
            android:textSize="30sp"
            android:background="@drawable/button_tertiary_default"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="false"
            android:id="@+id/caterogy_achievements_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Mode_Based_Achievements"
            android:textSize="30sp"
            android:background="@drawable/button_tertiary_default"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="false"
            android:id="@+id/mode_achievements_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Epic_Achievements"
            android:textSize="30sp"
            android:background="@drawable/button_tertiary_default"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:checked="false"
            android:id="@+id/epic_achievements_button"/>
    </LinearLayout>
</ScrollView>
