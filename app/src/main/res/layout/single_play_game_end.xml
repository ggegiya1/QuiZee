<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:minHeight="300dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/end_single_play_summary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/end_felicitations"
        android:text="Hello"
        android:textStyle="bold"
        android:textColor="@color/primaryBackground"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_weight="0.10"
        android:background="@drawable/button_primary_default"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/end_good_answers"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/primaryBackground"
        android:text="@string/achivements_earned"
        android:layout_weight="0.1"
        android:background="@drawable/button_primary_default"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/end_achievements_earned"
        android:layout_weight="0.30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/end_play_again_button_yes"
            android:text="@string/replay"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:background="@drawable/button_tertiary_default"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:id="@+id/end_play_again_button_no"
            android:text="@string/dont_replay"
            android:background="@drawable/button_tertiary_default"/>

    </LinearLayout>

</LinearLayout>