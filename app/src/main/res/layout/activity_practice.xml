<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:background="@android:color/background_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Icon"
                android:contentDescription="@string/category_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Textview"
                android:layout_toEndOf="@id/caterogy_Icon"
                android:text="Caterogy"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/complementaryBackground"
                android:layout_toStartOf="@+id/level"/>



            <TextView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/level"
                android:gravity="center"
                android:background="@drawable/ic_star2"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/complementaryBackground"
                android:layout_toStartOf="@+id/currency"
                android:text="56"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/currency"
                android:gravity="center"
                android:text="13"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/ic_currency"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/my_toolbar">

        <RelativeLayout
            android:id="@+id/GameStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.57">

            <TextView
                android:id="@+id/correct_answer_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="70dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/question_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/correct_answer_count_label"
                android:layout_alignBottom="@+id/correct_answer_count_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correct"
                android:gravity="center"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignEnd="@+id/correct_answer_count_label" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/question_count_label"
                android:text="total"
                android:gravity="center" />

        </RelativeLayout>

        <com.app.game.quizee.util.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:id="@+id/text_question"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:lineSpacingExtra="8sp"
            android:padding="5dp"
            android:textSize="20sp"
            android:maxLines="4"
            android:background="@drawable/button_secondary_default"
            android:textAlignment="textStart"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/answer_buttons"
        android:splitMotionEvents="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:id="@+id/practice_button_response_1"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"
            android:background="@color/colorSecondary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:id="@+id/practice_button_response_2"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"
            android:background="@color/colorSecondary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:id="@+id/practice_button_response_3"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"
            android:background="@color/colorSecondary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="5dp"
            android:id="@+id/practice_button_response_4"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"
            android:background="@color/colorSecondary">

        </Button>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/bottom_buttons">

            <Button
                android:id="@+id/practice_skip_question_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_tertiary_default"
                android:backgroundTint="@color/green"
                android:drawableStart="@drawable/ic_skip"
                android:paddingEnd="20dp"
                android:layout_gravity="center"
                android:paddingStart="20dp"
                android:text="@string/Skip_Button" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>