<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:background="@android:color/background_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Icon"
                android:contentDescription="@string/category_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Textview"
                android:layout_toEndOf="@id/caterogy_Icon"
                android:text="Caterogy"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:layout_toStartOf="@+id/level"/>



            <TextView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/level"
                android:gravity="center"
                android:background="@drawable/ic_star2"
                android:backgroundTint="@color/yellow"
                android:layout_toStartOf="@+id/currency"
                android:text="56"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/currency"
                android:gravity="center"
                android:text="13"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:drawableRight="@drawable/ic_currency"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/GameStatus"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/text_question">

    </RelativeLayout>

    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/text_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:lineSpacingExtra="8sp"
        android:textAlignment="textStart"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:background="@drawable/button_secondary_default"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/correct_answer_count_label"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/answer_buttons"
        android:splitMotionEvents="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/bottom_buttons"
        android:layout_below="@+id/text_question">

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/button_response_1"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"/>

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/button_response_2"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"/>

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/button_response_3"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false"/>

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/button_response_4"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:splitMotionEvents="false">

        </TextSwitcher>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_buttons">

        <Button
            android:id="@+id/practice_skip_question_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Skip_Button" />
    </LinearLayout>

    <TextView
        android:id="@+id/correct_answer_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:layout_marginStart="77dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/text_question" />

    <TextView
        android:id="@+id/question_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:layout_marginEnd="76dp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/text_question" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="correct"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignStart="@+id/correct_answer_count_label" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="total"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignRight="@+id/question_count_label"/>

</RelativeLayout>