<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.game.quizee.ShopFragment">

    <TextView
        android:id="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorSecondary"
        android:background="@drawable/button_primary_default"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="@string/shop_power_ups" />

    <ListView
        android:layout_below="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="30dp"
        android:id="@+id/shop_listview"
        android:divider="@color/primaryBackground"
        android:scrollbarThumbVertical="@drawable/scroll_bars_thumb"
        android:layout_alignParentBottom="true"
        android:scrollbarSize="5dp"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:layout_margin="10dp" />

</RelativeLayout>
