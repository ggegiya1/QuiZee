<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:padding="3dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/list_selector"
    android:weightSum="1">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="contact icon"
        android:id="@+id/contact_avatar_icon"
        android:backgroundTint="@android:color/background_light"
        android:src="@drawable/ic_connection_circle"/>

    <me.grantland.widget.AutofitTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:id="@+id/contact_item_name"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:maxLines="1"
        android:text="Contact item name"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/contact_level"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:background="@android:drawable/star_big_on"
        android:text="0" />

    <TextView
        android:id="@+id/contact_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

</LinearLayout>