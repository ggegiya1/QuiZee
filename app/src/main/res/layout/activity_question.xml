<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:background="@android:color/background_dark">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Icon"
                android:layout_margin="2dp"
                android:background="@android:color/background_light"
                android:contentDescription="@string/category_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/caterogy_Textview"
                android:layout_toEndOf="@id/caterogy_Icon"
                android:text="Category"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_toStartOf="@+id/level"
                android:layout_alignBottom="@+id/caterogy_Icon" />



            <TextView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:id="@+id/level"
                android:gravity="center"
                android:background="@drawable/ic_star2"
                android:backgroundTint="@color/yellow"
                android:layout_toStartOf="@+id/currency"
                android:text="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/currency"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:drawableRight="@drawable/ic_currency"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:id="@+id/GameStatus">

        <TextView
            android:text="1"
            android:layout_weight="0.33"
            android:layout_height="match_parent"
            android:id="@+id/correct_answer_count"
            android:textSize="30sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_width="0dp" />

        <TextView
            android:text="12:314"
            android:layout_weight="0.33"
            android:layout_height="match_parent"
            android:id="@+id/timer"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_width="0dp" />

        <TextView
            android:text="2/9"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/yellow"
            android:layout_height="match_parent"
            android:id="@+id/question_count"
            android:layout_weight="0.33" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:text="correct"
        android:layout_weight="0.33"
        android:layout_height="match_parent"
        android:id="@+id/correct_label"
        android:textSize="12sp"
        android:textColor="@android:color/primary_text_dark"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:text="time left"
        android:layout_weight="0.33"
        android:layout_height="match_parent"
        android:id="@+id/timer_label"
        android:textSize="12sp"
        android:textColor="@android:color/primary_text_dark"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:text="question"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_height="match_parent"
        android:id="@+id/question_count_label"
        android:layout_weight="0.33" />
</LinearLayout>
    <com.app.game.quizee.util.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:id="@+id/text_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:lineSpacingExtra="8sp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:text="Welcome to QueZee"
        android:padding="10dp"
        android:maxLines="6"
        android:background="@android:color/background_light"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/answer_buttons"
        android:splitMotionEvents="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_response_1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:background="@drawable/button_secondary_default"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_response_2"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:background="@drawable/button_secondary_default"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_response_3"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:background="@drawable/button_secondary_default"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_response_4"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:background="@drawable/button_secondary_default"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/bottom_buttons">

        <Button
            android:contentDescription="@string/Bomb_Button"
            android:drawableStart="@drawable/ic_bomb"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_bomb"
            android:text="0"
            android:layout_weight="0.25"
            android:backgroundTint="@android:color/holo_red_light" />

        <Button
            android:contentDescription="@string/Hint_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_hint"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/button_hint"
            android:layout_weight="0.25"
            android:text="0"
            android:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:contentDescription="@string/addTime_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/button_add_time"
            android:drawableStart="@drawable/ic_addtime"
            android:text="0"
            android:layout_weight="0.25"
            android:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:contentDescription="@string/Skip_Button"
            android:drawableStart="@drawable/ic_skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/button_question_skip"
            android:layout_weight="0.25"
            android:text="0"
            android:backgroundTint="@android:color/holo_blue_bright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.01"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="@string/Bomb_Button"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:id="@+id/bomb_label"
            android:textSize="15sp"
            android:textColor="@android:color/primary_text_dark"
            android:gravity="center"
            android:layout_width="0dp" />

        <TextView
            android:text="@string/Hint_Button"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:id="@+id/hint_label"
            android:textSize="15sp"
            android:textColor="@android:color/primary_text_dark"
            android:gravity="center"
            android:layout_width="0dp" />

        <TextView
            android:text="@string/addTime_Button"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:id="@+id/add_time_label"
            android:textSize="15sp"
            android:textColor="@android:color/primary_text_dark"
            android:gravity="center"
            android:layout_width="0dp" />

        <TextView
            android:text="@string/Skip_Button"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/primary_text_dark"
            android:layout_height="match_parent"
            android:id="@+id/skip_label"
            android:layout_weight="0.25" />
    </LinearLayout>
</LinearLayout>