<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:minHeight="300dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/shop_dialog_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/shop_dialog_title"
        android:text="Hello"
        android:textStyle="bold"
        android:textColor="@color/primaryBackground"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_weight="0.10"
        android:background="@drawable/button_primary_default"/>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/shop_dialog_number_picker"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/shop_dialog_buy"
            android:text="@string/buy"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:background="@drawable/button_tertiary_default"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:id="@+id/shop_dialog_dont_buy"
            android:text="@string/dont_buy"
            android:background="@drawable/button_tertiary_default"/>

    </LinearLayout>

</LinearLayout>