<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/primaryBackground"
    android:padding="20dp">

    <TextView
        android:text="Select Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_weight="0.10"
        android:textColor="@color/complementaryBackground"/>

    <CheckedTextView
        android:text="Music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_music"
        android:checked="false"
        android:textSize="30sp"
        android:background="@drawable/button_tertiary_style"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:drawableStart="@drawable/music_category_icon"
        android:layout_weight="0.1"/>

    <CheckedTextView
        android:text="Video Games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_video_games"
        android:checked="false"
        android:textSize="30sp"
        android:background="@drawable/button_tertiary_style"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:drawableStart="@drawable/videogames_category_icon"
        android:layout_weight="0.1"/>

    <CheckedTextView
        android:text="Computers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_computers"
        android:checked="false"
        android:textSize="30sp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_weight="0.1"
        android:background="@drawable/button_tertiary_style"
        android:drawableStart="@drawable/ic_computer"/>

    <CheckedTextView
        android:text="History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_history"
        android:checked="false"
        android:textSize="30sp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_weight="0.1"
        android:background="@drawable/button_tertiary_style"
        android:drawableLeft="@drawable/ic_history"/>

    <CheckedTextView
        android:text="Geography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_geography"
        android:checked="false"
        android:textSize="30sp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_weight="0.1"
        android:background="@drawable/button_tertiary_style"
        android:drawableStart="@drawable/ic_geography"/>

    <CheckedTextView
        android:text="Art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_art"
        android:checked="false"
        android:textSize="30sp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_weight="0.1"
        android:background="@drawable/button_tertiary_style"
        android:drawableStart="@drawable/ic_art"/>

    <CheckedTextView
        android:text="General Knowledge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_knowledge"
        android:checked="false"
        android:textSize="30sp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_weight="0.1"
        android:background="@drawable/button_tertiary_style"
        android:drawableStart="@drawable/ic_general_knowledge"/>

    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:onClick="Play"
        android:text="@string/Play"
        android:drawableStart="@drawable/ic_start"
        android:background="@drawable/button_tertiary_style"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

</LinearLayout>