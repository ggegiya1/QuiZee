<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/primaryBackground">

    <include layout="@layout/toolbar_no_settings"/>

    <TextView
        android:text="@string/categorySelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="@color/complementaryBackground"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_primary_style"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/category_list"
        android:layout_margin="10dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_start"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_margin="10dp"
        android:text="@string/Play"/>

</LinearLayout>